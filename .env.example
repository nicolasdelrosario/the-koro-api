# Environment variables for The Koro API
# Copy to .env and adjust values for your setup

# PostgreSQL connection (TypeORM uses this)
# Format: postgres://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgres://postgres:postgres@localhost:5432/the_koro_api

# Frontend URL for CORS
# Format: http://<domain>:<port>
# Example: http://localhost:3001
FRONTEND_URL=http://localhost:3001

# App port
PORT=3000

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration time in seconds
JWT_EXPIRES_IN=3600


# Optional: NODE_ENV
NODE_ENV=development